{
    "id": "https://frontastic.cloud/json/tasticSchema",
    "title": "Tastic Schema",
    "description": "A Frontastic tastic definition",
    "type": "object",
    "properties": {
        "tasticType": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "schema": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "fields": {
                        "type": "array",
                        "items": {
                            "allOf": [
                                { "$ref": "https://frontastic.cloud/json/schema/common#/definitions/fieldDefinition" },
                                {
                                    "type": "object",
                                    "properties": {
                                        "type": {
                                            "anyOf": [
                                                { "$ref": "https://frontastic.cloud/json/schema/common#/definitions/fieldType" },
                                                {
                                                    "type": "string",
                                                    "enum": [
                                                        "custom",
                                                        "group"
                                                    ]
                                                }
                                            ]
                                        }
                                    }
                                }
                            ]
                        }
                    }
                },
                "required": ["name", "fields"]
            }
        }
    },
    "required": ["tasticType", "name", "schema"]
}
