{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://frontastic.cloud/json/tasticSchema",
    "title": "Tastic Schema",
    "description": "A Frontastic tastic definition",
    "type": "object",
    "properties": {
        "tasticType": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "schema": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "fields": {
                        "type": "array",
                        "items": {
                            "oneOf": [
                                {"$ref": "https://frontastic.cloud/json/schema/common#/definitions/field"},
                                {"$ref": "https://frontastic.cloud/json/schema/common#/definitions/group"},
                                {"$ref": "https://frontastic.cloud/json/schema/common#/definitions/image"},
                                {"$ref": "https://frontastic.cloud/json/schema/common#/definitions/description"}
                            ]
                        }
                    }
                },
                "required": ["name", "fields"]
            }
        }
    },
    "required": ["tasticType", "name", "schema"]
}
