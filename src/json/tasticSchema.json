{
    "id": "https://frontastic.cloud/json/tasticSchema",
    "title": "Tastic Schema",
    "description": "A Frontastic tastic definition",
    "type": "object",
    "properties": {
        "tasticType": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "schema": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "fields": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "label": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "field": {
                                    "type": "string"
                                },
                                "translatable": {
                                    "type": "boolean"
                                },
                                "required": {
                                    "type": "boolean"
                                },
                                "type": {
                                    "anyOf": [
                                        { "$ref": "https://frontastic.cloud/json/schema/common#/definitions/fieldType" },
                                        {
                                            "type": "string",
                                            "enum": [
                                                "custom",
                                                "group"
                                            ]
                                        }
                                    ]
                                }
                            },
                            "required": ["label", "field", "type"]
                        }
                    }
                },
                "required": ["name", "fields"]
            }
        }
    },
    "required": ["tasticType", "name", "schema"]
}
