{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://frontastic.cloud/json/tasticSchema",
    "title": "Tastic Schema",
    "description": "A Frontastic tastic definition",
    "type": "object",
    "definitions": {
        "field": {
            "allOf": [
                { "$ref": "https://frontastic.cloud/json/schema/common#/definitions/field" },
                { "$ref": "#/definitions/tastic-field-additions" }
            ]
        },
        "tastic-field-additions": {
            "type": "object",
            "properties": {
                "type": {
                    "anyOf": [
                        { "$ref": "https://frontastic.cloud/json/schema/common#/definitions/field-type" },
                        {
                            "type": "string",
                            "enum": [
                                "group"
                            ]
                        }
                    ]
                }
            }
        }
    },
    "properties": {
        "tasticType": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "schema": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "fields": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/field"
                        }
                    }
                },
                "required": ["name", "fields"]
            }
        }
    },
    "required": ["tasticType", "name", "schema"]
}
