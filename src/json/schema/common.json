{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://frontastic.cloud/json/schema/common",
    "title": "Common Schema Elements",
    "description": "Definitions of Common Elements in Frontastic Schemas",

    "definitions": {
        "field": {
            "type": "object",
            "properties": {
                "label": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "field": {
                    "type": "string",
                    "not": {
                        "enum": ["id", "sequence", "locale", "is_deleted"]
                    }
                },

                "type": {
                    "@ref": "#/definitions/field-type"
                },
                "streamType": {
                    "$comment": "TODO: Define dependency to type?",
                    "type": "string"
                },
                "default": {
                    "$comment": "Value type depends on the 'type' and is therefore arbitrary."
                },
                "options": {
                    "$comment": "Any kind of options supported by the field type",
                    "type": "object"
                },

                "translatable": {
                    "type": "boolean"
                },
                "required": {
                    "type": "boolean"
                }
            },
            "required": ["field", "type", "label"],
            "additionalProperties": false
        },
        "field-type": {
            "enum": [
                "boolean",
                "custom",
                "decimal",
                "enum",
                "integer",
                "markdown",
                "media",
                "node",
                "reference",
                "stream",
                "string",
                "text",
                "tree"
            ]
        },
        "group": {
            "type": "object",
            "properties": {
                "label": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "field": {
                    "type": "string"
                },
                "type": {
                    "enum": ["group"]
                },
                "itemLabelField": {
                    "type": "string"
                },
                "min": {
                    "type": "integer"
                },
                "max": {
                    "type": "integer"
                },
                "fields": {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            {"$ref": "#/definitions/field"},
                            {"$ref": "#/definitions/image"},
                            {"$ref": "#/definitions/description"}
                        ]
                    }
                }
            },
            "required": ["label", "field", "itemLabelField", "type"]
        },
        "image": {
            "$comment": "Illustrating image as part of the input form",

            "type": "object",
            "properties": {
                "url": {
                    "type": "string"
                },
                "type": {
                    "enum": ["image"]
                }
            },
            "required": ["url", "type"]
        },
        "description": {
            "$comment": "Illustrating description as part of the input form",

            "type": "object",
            "properties": {
                "text": {
                    "type": "string"
                },
                "type": {
                    "enum": ["description"]
                }
            },
            "required": ["text", "type"]
        }
    }
}
