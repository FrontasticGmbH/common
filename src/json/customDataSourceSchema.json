{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://frontastic.cloud/json/customDataSourceSchema",

    "title": "Custom data surce schema",
    "description": "A Frontastic custom data source definition",

    "type": "object",

    "properties": {
        "customDataSourceType": {
            "type": "string",
            "pattern": "[^ ]"
        },
        "name": {
            "type": "string"
        },
        "icon": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "schema": {
            "$ref": "https://frontastic.cloud/json/library/common#/definitions/schema"
        }
    },
    "required": ["customDataSourceType", "name", "schema"]
}
