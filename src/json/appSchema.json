{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://frontastic.cloud/json/appSchema",

    "title": "Custom App Schema",
    "description": "A Frontastic custom app definition",

    "type": "object",

    "definitions": {
        "field": {
            "allOf": [
                { "$ref": "https://frontastic.cloud/json/schema/common#/definitions/field" },
                { "$ref": "#/definitions/app-field-additions" }
            ]
        },
        "app-field-additions": {
            "$comment": "Restrictions that apply only to app schemas",

            "type": "object",
            "properties": {
                "type": { "$ref": "https://frontastic.cloud/json/schema/common#/definitions/field-type" },
                "field": {
                    "type": "string",
                    "not": {
                        "enum": ["id", "sequence", "locale", "is_deleted"]
                    }
                }
            }
        },
        "image": {
            "$comment": "Illustrating image as part of the input form",

            "type": "object",
            "properties": {
                "url": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": ["image"]
                }
            },
            "required": ["url", "type"]
        },
        "description": {
            "$comment": "Illustrating description as part of the input form",

            "type": "object",
            "properties": {
                "text": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": ["description"]
                }
            },
            "required": ["text", "type"]
        }
    },
    "properties": {
        "identifier": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "icon": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "fields": {
            "$comment": "Fields to be displayed in the overview table of the custom app.",

            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "label": {
                        "type": "string"
                    },
                    "field": {
                        "$comment": "Reference to a field identifier available in 'schema'.",

                        "type": "string"
                    }
                },
                "required": ["label", "field"]
            }
        },
        "schema": {
            "$comment": "Actual field schema of the custom app, fields grouped into named sections.",

            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "fields": {
                        "type": "array",
                        "items": {
                            "$comment": "Fields, groups of fields or illustrating images/descriptions.",

                            "oneOf": [
                                {"$ref": "#/definitions/field"},
                                {"$ref": "#/definitions/image"},
                                {"$ref": "#/definitions/description"},
                                {
                                    "$comment": "@TODO: This is the actual detailed definition of a 'group', right?",

                                    "type": "object",
                                    "properties": {
                                        "label": {
                                            "type": "string"
                                        },
                                        "description": {
                                            "type": "string"
                                        },
                                        "field": {
                                            "type": "string"
                                        },
                                        "itemLabelField": {
                                            "type": "string"
                                        },
                                        "min": {
                                            "type": "integer"
                                        },
                                        "max": {
                                            "type": "integer"
                                        },
                                        "fields": {
                                            "type": "array",
                                            "items": {
                                                "oneOf": [
                                                    {"$ref": "#/definitions/field"},
                                                    {"$ref": "#/definitions/image"},
                                                    {"$ref": "#/definitions/description"}
                                                ]
                                            }
                                        },
                                        "type": {
                                            "type": "string",
                                            "enum": ["group"]
                                        }
                                    },
                                    "required": ["label", "field", "itemLabelField", "type"]
                                }
                            ]
                        }
                    }
                },
                "required": ["name", "fields"]
            }
        },
        "indexes": {
            "$comment": "Indexes that should be set upon the custom data to improve searching and fetching in Catwalk.",

            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "fields": {
                        "$comment": "References to field identifiers used in 'schema'",

                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": ["name", "fields"]
            }
        }
    },
    "required": ["identifier", "name", "fields", "schema"]
}
