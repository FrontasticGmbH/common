{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://frontastic.cloud/json/library/common",
    "title": "Common Schema Elements",
    "description": "Definitions of Common Elements in Frontastic Schemas",

    "definitions": {
        "schema": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "fields": {
                        "$ref": "#/definitions/fields"
                    }
                },
                "required": ["name", "fields"]
            }
        },

        "fields": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "allOf": [
                            {
                                "type": "object",
                                "properties": {
                                    "type": {
                                        "enum": [
                                            "boolean",
                                            "custom",
                                            "dataSource",
                                            "decimal",
                                            "dynamic-filter",
                                            "enum",
                                            "integer",
                                            "json",
                                            "markdown",
                                            "media",
                                            "node",
                                            "number",
                                            "reference",
                                            "stream",
                                            "string",
                                            "text",
                                            "tree",
                                            "instant",
                                            "group",
                                            "image",
                                            "description",
                                            "tastic"
                                        ]
                                    }
                                }
                            },
                            { "$ref": "#/definitions/match-type-with-relevant-schema" }
                        ]
                    }
                ]
            }
        },


        "field": {
            "type": "object",
            "properties": {
                "label": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "field": {
                    "type": "string",
                    "not": {
                        "enum": ["id", "sequence", "locale", "is_deleted"]
                    }
                },
                "streamType": {
                    "$comment": "TODO: Define dependency to type?",
                    "type": "string"
                },
                "dataSourceType": {
                    "$comment": "TODO: Define dependency to type?",
                    "type": "string"
                },
                "dynamicFilterEndpoint": {
                    "$comment": "TODO: Define dependency to type dynamic-filter?",
                    "type": "string"
                },
                "customAppType": {
                    "$comment": "TODO: Define dependency to type?",
                    "type": "string"
                },
                "default": {
                    "$comment": "Value type depends on the 'type' and is therefore arbitrary."
                },
                "options": {
                    "$comment": "Any kind of options supported by the field type",
                    "type": "object"
                },
                "values": {
                    "$comment": "Value set for 'enum' type",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "value": {
                                "type": "string"
                            },
                            "name": {
                                "type": "string"
                            }
                        }
                    }
                },

                "translatable": {
                    "type": "boolean"
                },
                "required": {
                    "type": "boolean"
                },

                "$comment": {
                    "@comment": "Allow json-schema style comments in our schemas",
                    "type": "string"
                }
            },
            "$ref": "#/definitions/multiple-field-types-imply-multiple-attributes-is-required"  
        },
        "group": {
            "type": "object",
            "properties": {
                "label": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "field": {
                    "type": "string"
                },
                "itemLabelField": {
                    "type": "string"
                },
                "min": {
                    "type": "integer"
                },
                "max": {
                    "type": "integer"
                },
                "fields": {
                    "$ref": "#/definitions/fields"
                },

                "$comment": {
                    "@comment": "Allow json-schema style comments in our schemas",
                    "type": "string"
                }
            },
            "$ref": "#/definitions/group-type-implies-label-and-field-are-required"
        },
        "tastic":{
            "$comment": "Allow nesting of tastics",

            "type": "object",
            "properties": {
                "tasticType":{
                    "type": "string"
                },
                "tasticData":{
                    "type": "object"
                },
                "$comment": {
                    "@comment": "Allow json-schema style comments in our schemas",
                    "type": "string"
                }
            },
            "$ref": "#/definitions/tastic-type-implies-label-is-required"
        },
        "image": {
            "$comment": "Illustrating image as part of the input form",

            "type": "object",
            "properties": {
                "url": {
                    "type": "string"
                },
                "$comment": {
                    "@comment": "Allow json-schema style comments in our schemas",
                    "type": "string"
                }
            },
            "$ref": "#/definitions/image-type-implies-url-is-required"
        },
        "description": {
            "$comment": "Illustrating description as part of the input form",

            "type": "object",
            "properties": {
                "text": {
                    "type": "string"
                },
                "$comment": {
                    "@comment": "Allow json-schema style comments in our schemas",
                    "type": "string"
                }
            },
            "$ref": "#/definitions/description-type-implies-text-is-required"
        },

        "match-type-with-relevant-schema": {
            "allOf":[
                {
                    "anyOf":[
                        {
                            "not": {
                                "properties": {
                                    "type": {
                                        "enum": ["image"]
                                    }
                                },
                                "required": ["type"]
                            }
                        },
                        { "$ref": "#/definitions/image" }
                    ]
                },
                {
                    "anyOf":[
                        {
                            "not": {
                                "properties": {
                                    "type": {
                                        "enum": ["description"]
                                    }
                                },
                                "required": ["type"]
                            }
                        },
                        { "$ref": "#/definitions/description" }
                    ]
                },
                {
                    "anyOf":[
                        {
                            "not": {
                                "properties": {
                                    "type": {
                                        "enum": ["tastic"]
                                    }
                                },
                                "required": ["type"]
                            }
                        },
                        { "$ref": "#/definitions/tastic" }
                    ]
                },
                {
                    "anyOf":[
                        {
                            "not": {
                                "properties": {
                                    "type": {
                                        "enum": ["group"]
                                    }
                                },
                                "required": ["type"]
                            }
                        },
                        { "$ref": "#/definitions/group" }
                    ]
                },
                { "$ref": "#/definitions/field" }
            ]
        },

        "multiple-field-types-imply-multiple-attributes-is-required": {
            "allOf":[
                {
                    "anyOf":[
                        {
                            "not": {
                                "properties": {
                                    "type": {
                                        "enum": ["enum"]
                                    }
                                },
                                "required": ["type"]
                            }
                        },
                        { "required": ["values"] }
                    ]
                },
                {
                    "anyOf":[
                        {
                            "not": {
                                "properties": {
                                    "type": {
                                        "enum": [""]
                                    }
                                }
                            }
                        },
                        { "required": ["label", "type", "field"] }
                    ]
                },
                {
                    "anyOf":[
                        {
                            "not": {
                                "properties": {
                                    "type": {
                                        "enum": [
                                            "boolean",
                                            "custom",
                                            "dataSource",
                                            "decimal",
                                            "dynamic-filter",
                                            "enum",
                                            "integer",
                                            "json",
                                            "markdown",
                                            "media",
                                            "node",
                                            "number",
                                            "reference",
                                            "stream",
                                            "string",
                                            "text",
                                            "tree",
                                            "instant"
                                        ]
                                    }
                                },
                                "required": ["type"]
                            }
                        },
                        { "required": ["label", "type", "field"] }
                    ]
                }
            ]
        },
        "group-type-implies-label-and-field-are-required": {
            "anyOf":[
                {
                    "not": {
                        "properties": {
                            "type": {
                                "enum": ["group"]
                            }
                        },
                        "required": ["type"]
                    }
                },
                { "required": ["label", "field"] }
            ]
        },
        "tastic-type-implies-label-is-required": {
            "anyOf":[
                {
                    "not": {
                        "properties": {
                            "type": {
                                "enum": ["tastic"]
                            }
                        },
                        "required": ["type"]
                    }
                },
                { "required": ["label"] }
            ]
        },
        "image-type-implies-url-is-required": {
            "anyOf":[
                {
                    "not": {
                        "properties": {
                            "type": {
                                "enum": ["image"]
                            }
                        },
                        "required": ["type"]
                    }
                },
                { "required": ["url"] }
            ]
        },
        "description-type-implies-text-is-required": {
            "anyOf":[
                {
                    "not": {
                        "properties": {
                            "type": {
                                "enum": ["description"]
                            }
                        },
                        "required": ["type"]
                    }
                },
                { "required": ["text"] }
            ]
        }
    }
}
