{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://frontastic.cloud/json/library/common",
    "title": "Common Schema Elements",
    "description": "Definitions of Common Elements in Frontastic Schemas",

    "definitions": {
        "schema": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "fields": {
                        "$ref": "#/definitions/fields"
                    }
                },
                "required": ["name", "fields"]
            }
        },

        "fields": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "allOf": [
                            {
                                "type": "object",
                                "properties": {
                                    "type": {
                                        "enum": [
                                            "boolean",
                                            "custom",
                                            "decimal",
                                            "dynamic-filter",
                                            "enum",
                                            "integer",
                                            "json",
                                            "markdown",
                                            "media",
                                            "node",
                                            "number",
                                            "reference",
                                            "stream",
                                            "string",
                                            "text",
                                            "tree"
                                        ]
                                    }
                                }
                            },
                            {"$ref": "#/definitions/field"}
                        ]
                    },
                    {
                        "allOf": [
                            {
                                "type": "object",
                                "properties": {
                                    "type": {
                                        "enum": ["group"]
                                    }
                                }
                            },
                            {"$ref": "#/definitions/group"}
                        ]
                    },
                    {
                        "allOf": [
                            {
                                "type": "object",
                                "properties": {
                                    "type": {
                                        "enum": ["tastic"]
                                    }
                                }
                            },
                            {"$ref": "#/definitions/tastic"}
                        ]
                    },
                    {
                        "allOf": [
                            {
                                "type": "object",
                                "properties": {
                                    "type": {
                                        "enum": ["image"]
                                    }
                                }
                            },
                            {"$ref": "#/definitions/image"}
                        ]
                    },
                    {
                        "allOf": [
                            {
                                "type": "object",
                                "properties": {
                                    "type": {
                                        "enum": ["description"]
                                    }
                                }
                            },
                            {"$ref": "#/definitions/description"}
                        ]
                    }
                ]
            }
        },

        "field": {
            "type": "object",
            "properties": {
                "label": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "field": {
                    "type": "string",
                    "not": {
                        "enum": ["id", "sequence", "locale", "is_deleted"]
                    }
                },
                "streamType": {
                    "$comment": "TODO: Define dependency to type?",
                    "type": "string"
                },
                "dynamicFilterEndpoint": {
                    "$comment": "TODO: Define dependency to type dynamic-filter?",
                    "type": "string"
                },
                "customAppType": {
                    "$comment": "TODO: Define dependency to type?",
                    "type": "string"
                },
                "default": {
                    "$comment": "Value type depends on the 'type' and is therefore arbitrary."
                },
                "options": {
                    "$comment": "Any kind of options supported by the field type",
                    "type": "object"
                },
                "values": {
                    "$comment": "Value set for 'enum' type",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "value": {
                                "type": "string"
                            },
                            "name": {
                                "type": "string"
                            }
                        }
                    }
                },

                "translatable": {
                    "type": "boolean"
                },
                "required": {
                    "type": "boolean"
                },

                "$comment": {
                    "@comment": "Allow json-schema style comments in our schemas",
                    "type": "string"
                }
            },
            "required": ["field", "type", "label"]
        },
        "group": {
            "type": "object",
            "properties": {
                "label": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "field": {
                    "type": "string"
                },
                "itemLabelField": {
                    "type": "string"
                },
                "min": {
                    "type": "integer"
                },
                "max": {
                    "type": "integer"
                },
                "fields": {
                    "$ref": "#/definitions/fields"
                },

                "$comment": {
                    "@comment": "Allow json-schema style comments in our schemas",
                    "type": "string"
                }
            },
            "required": ["label", "field", "type"]
        },
        "tastic":{
            "$comment": "Allow nesting of tastics",

            "type": "object",
            "properties": {
                "tasticType":{
                    "type": "string"
                },
                "tasticData":{
                    "type": "object"
                },
                "$comment": {
                    "@comment": "Allow json-schema style comments in our schemas",
                    "type": "string"
                }
            },
            "required": ["label", "type"]
        },
        "image": {
            "$comment": "Illustrating image as part of the input form",

            "type": "object",
            "properties": {
                "url": {
                    "type": "string"
                },
                "$comment": {
                    "@comment": "Allow json-schema style comments in our schemas",
                    "type": "string"
                }
            },
            "required": ["url", "type"]
        },
        "description": {
            "$comment": "Illustrating description as part of the input form",

            "type": "object",
            "properties": {
                "text": {
                    "type": "string"
                },
                "$comment": {
                    "@comment": "Allow json-schema style comments in our schemas",
                    "type": "string"
                }
            },
            "required": ["text", "type"]
        }
    }
}
