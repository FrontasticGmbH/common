<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="true" />

        <service id="Frontastic\Common\CartApiBundle\Domain\OrderIdGenerator\Random">
        </service>

        <service id="frontastic.order-id-generator"
                 alias="Frontastic\Common\CartApiBundle\Domain\OrderIdGenerator\Random" />

        <service id="Frontastic\Common\CartApiBundle\Domain\CartApiFactory">
            <argument type="service"
                      id="Frontastic\Common\ProductApiBundle\Domain\ProductApi\Commercetools\ClientFactory" />
            <argument type="service"
                      id="Frontastic\Common\ProductApiBundle\Domain\ProductApi\Commercetools\Locale\DefaultCommercetoolsLocaleCreatorFactory" />
            <argument type="service" id="frontastic.order-id-generator" />
            <argument type="tagged" tag="cartApi.lifecycleEventListener" />
        </service>
    </services>
</container>
