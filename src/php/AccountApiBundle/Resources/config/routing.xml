<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="Frontastic.UserBundle.User.session" path="/">
        <default key="_controller">Frontastic\Backstage\UserBundle\Controller\UserController::indexAction</default>
    </route>

    <route id="Frontastic.UserBundle.User.get" path="/get/{email}" methods="GET">
        <default key="_controller">Frontastic\Backstage\UserBundle\Controller\UserController::getAction</default>
    </route>

    <route id="Frontastic.UserBundle.User.register" path="/register" methods="PUT">
        <default key="_controller">Frontastic\Backstage\UserBundle\Controller\UserController::registerAction</default>
    </route>

    <route id="Frontastic.UserBundle.User.login" path="/login" methods="POST">
        <default key="_controller">Frontastic\Backstage\UserBundle\Controller\UserController::loginAction</default>
    </route>

    <route id="Frontastic.UserBundle.User.logout" path="/logout">
        <default key="_controller">Frontastic\Backstage\UserBundle\Controller\UserController::logoutAction</default>
    </route>

    <route id="Frontastic.UserBundle.User.confirm" path="/confirm/{token}" methods="POST">
        <default key="_controller">Frontastic\Backstage\UserBundle\Controller\UserController::confirmAction</default>
    </route>

    <route id="Frontastic.UserBundle.User.request" path="/request" methods="POST">
        <default key="_controller">Frontastic\Backstage\UserBundle\Controller\UserController::requestResetAction</default>
    </route>

    <route id="Frontastic.UserBundle.User.reset" path="/reset/{token}" methods="POST">
        <default key="_controller">Frontastic\Backstage\UserBundle\Controller\UserController::resetAction</default>
    </route>

    <route id="Frontastic.UserBundle.User.changePassword" path="/password" methods="POST">
        <default key="_controller">Frontastic\Backstage\UserBundle\Controller\UserController::changePasswordAction</default>
    </route>

    <route id="Frontastic.UserBundle.User.update" path="/update" methods="POST">
        <default key="_controller">Frontastic\Backstage\UserBundle\Controller\UserController::updateAction</default>
    </route>
</routes>
