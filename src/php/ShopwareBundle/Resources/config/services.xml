<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="true"/>

        <instanceof id="Frontastic\Common\ShopwareBundle\Domain\DataMapperInterface" autowire="true" public="false">
            <tag name="shopware.data_mapper"/>
        </instanceof>

        <service id="Frontastic\Common\ShopwareBundle\Domain\ClientFactory">
            <argument type="service" id="Frontastic\Common\HttpClient"/>

            <tag name="frontastic.common.api_integration.factory" key="shopware.client_factory"/>
        </service>

        <service id="Frontastic\Common\ShopwareBundle\Domain\Locale\LocaleCreatorFactory">
            <argument type="service" id="Frontastic\Common\ProjectApiBundle\Domain\ProjectApiFactory"/>
            <argument type="service" id="Frontastic\Catwalk\ApiCoreBundle\Domain\Context"/>
            <tag name="frontastic.common.api_integration.factory" key="shopware.locale_creator_factory"/>
        </service>

        <service id="Frontastic\Common\ShopwareBundle\Domain\DataMapperResolver">
            <argument type="tagged_iterator" tag="shopware.data_mapper"/>
            <tag name="frontastic.common.api_integration.factory" key="shopware.data_mapper"/>
        </service>
    </services>
</container>
