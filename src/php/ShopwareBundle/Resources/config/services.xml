<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <instanceof id="Frontastic\Common\ShopwareBundle\Domain\DataMapper\DataMapperInterface" autowire="true">
            <tag name="frontastic.common.shopware.data_mapper"/>
        </instanceof>

        <prototype namespace="Frontastic\Common\ShopwareBundle\Domain\"
                   resource="../../Domain"
                   exclude="../../Domain/{Search}"
                   autoconfigure="true"/>

        <!-- START: Security decorators -->
        <service id="Frontastic\Common\ShopwareBundle\Domain\AccountApi\Security\ShopwareAuthenticator"
                 decorates="Frontastic\Catwalk\FrontendBundle\Security\Authenticator">
            <argument type="service"
                      id="Frontastic\Common\ShopwareBundle\Domain\AccountApi\Security\ShopwareAuthenticator.inner"/>
        </service>

        <service id="Frontastic\Common\ShopwareBundle\Domain\AccountApi\Security\ShopwareAccountProvider"
                 decorates="Frontastic\Catwalk\FrontendBundle\Security\AccountProvider">
            <argument type="service"
                      id="Frontastic\Common\ShopwareBundle\Domain\AccountApi\Security\ShopwareAccountProvider.inner"/>
        </service>
        <!-- END: Security decorators -->

        <service id="Frontastic\Common\ShopwareBundle\Domain\ClientFactory">
            <argument type="service" id="Frontastic\Common\HttpClient"/>
            <tag name="frontastic.common.api_integration"/>
        </service>

        <service id="Frontastic\Common\ShopwareBundle\Domain\DataMapper\DataMapperResolver">
            <argument type="tagged_iterator" tag="frontastic.common.shopware.data_mapper"/>
            <tag name="frontastic.common.api_integration"/>
        </service>

        <service id="Frontastic\Common\ShopwareBundle\Domain\Locale\DefaultLocaleCreatorFactory">
            <argument type="service" id="cache.app.simple"/>
            <argument type="service" id="Frontastic\Common\ShopwareBundle\Domain\DataMapper\DataMapperResolver"/>
            <argument>%kernel.debug%</argument>
            <tag name="frontastic.common.api_integration"/>
        </service>

        <service id="Frontastic\Common\ShopwareBundle\Domain\Locale\LocaleCreatorFactory"
                 alias="Frontastic\Common\ShopwareBundle\Domain\Locale\DefaultLocaleCreatorFactory"
                 public="true"/>
    </services>
</container>
