<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="Frontastic.AccountApi.Api.login" path="/login" methods="POST">
        <default key="_controller">
            Frontastic\Common\ShopwareBundle\Controller\AccountAuthController::loginAction
        </default>
    </route>

    <route id="Frontastic.AccountApi.Api.requestReset" path="/request" methods="POST">
        <default key="_controller">
            Frontastic\Common\ShopwareBundle\Controller\AccountAuthController::requestResetAction
        </default>
    </route>

    <route id="Frontastic.AccountApi.Api.register" path="/register" methods="POST">
        <default key="_controller">
            Frontastic\Common\ShopwareBundle\Controller\AccountAuthController::registerAction
        </default>
    </route>

    <route id="Frontastic.AccountApi.Api.changePassword" path="/password" methods="POST">
        <default key="_controller">
            Frontastic\Common\ShopwareBundle\Controller\AccountAuthController::changePasswordAction
        </default>
    </route>

    <route id="Frontastic.AccountApi.Api.update" path="/update" methods="POST">
        <default key="_controller">
            Frontastic\Common\ShopwareBundle\Controller\AccountAuthController::updateAction
        </default>
    </route>
</routes>
